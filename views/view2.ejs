<!DOCTYPE html>
<html lang="en">

  <head>
    <!--Meta Data-->
    <%- include('partial/title.ejs'); %> 

    <% if (data.NODE_ENV == 'production') { %>
      <!-- Production Stylesheets -->
      <link rel="stylesheet" href="assets/production/css/about.min.css">

    <% }else { %>
      <!-- Development Stylesheets -->
      <link rel="stylesheet" href="assets/lib/css/bootstrap.min.css">
      <link rel="stylesheet" href="assets/lib/css/fontawesome.min.css">
      <link rel="stylesheet" href="assets/lib/css/responsive.css">
      <link rel="stylesheet" href="assets/lib/css/select2.min.css">
      <link rel="stylesheet" href="assets/lib/css/spacing.css">
      <link rel="stylesheet" href="assets/lib/css/style.css">
      <link rel="stylesheet" href="assets/lib/css/owl.carousel.min.css">
      <link rel="stylesheet" href="assets/lib/css/bootstrap-datepicker.min.css">
      <link rel="stylesheet" href="assets/lib/css/magnific-popup.css">
      <link rel="stylesheet" href="assets/css/header.css">

    <% } %>

  </head>

  <body onLoad="typeWriter()">
    <!--Header-->
    <%- include('partial/header.ejs', {data: data }); %>

    <!--Single-Service Start-->
    <div class="single-service-area pt_60 pb_90">
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <div class="service-info">
              <div class="single-ser-carousel owl-carousel">
                <div class="event-photo-item">
                  <img src="assets/images/newborn.JPEG" alt="Service Photo">
                </div>
              </div>
              <h2>Mother Care</h2>
              <p>At MedicoBuddy, we understand that motherhood is a
                 beautiful yet delicate journey that requires expert support. 
                 Our Mother Care services are designed to provide comprehensive 
                 healthcare for women before, during, and after pregnancy. 
                 We offer personalized prenatal care, nutritional counseling, 
                 regular health check-ups, birthing support, postnatal care, and
                  emotional wellness programs. Our experienced team of gynecologists, obstetricians, and pediatricians ensures both mother and baby receive the best care at every stage. With a warm environment, modern facilities, and a compassionate approach, we are committed to making motherhood a safe, healthy, and joyful experience.


              </p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="service-sidebar">
              <div class="service-sidebar-item headstyle">
                <h4>OUR SERVICES</h4>
                <ul>
                  <li><i class="fas fa-angle-right"></i> Newborn Care</a></li>
                  <li><i class="fas fa-angle-right"></i> Mother Care</a></li>
                  <li><i class="fas fa-angle-right"></i> Critical Treatment</a></li>
                  <li><i class="fas fa-angle-right"></i> Modern Laboratory</a></li>
                  <li><i class="fas fa-angle-right"></i> All Major Tests</a></li>
                  <li><i class="fas fa-angle-right"></i> Dental Care</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--Single-Service End-->

    <!--Footer-->
    <%- include('partial/footer.ejs'); %>
    
    <script>
      var i = 0;
      var txt = 'WELCOME TO MEDBUDDY';
      var speed = 60;

      function typeWriter() {
        if (i < txt.length) {
          document.getElementById("typeit").innerHTML += txt.charAt(i);
          i++;
          setTimeout(typeWriter, speed);
        }
      }
    </script>

    <!-- JavaScript -->
    <script defer src="assets/lib/js/jquery-3.4.1.min.js"></script>
    <script defer src="assets/lib/js/popper.min.js"></script>
    <script defer src="assets/lib/js/bootstrap.bundle.min.js"></script>
    <script defer src="assets/lib/js/all.min.js"></script>
    <script defer src="assets/lib/js/select2.full.min.js"></script>
    <script defer src="assets/js/about.js"></script>

  </body>
</html>