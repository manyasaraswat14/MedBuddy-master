    <link rel="stylesheet" href="assets/lib/css/magnific-popup.css">
    <link rel="stylesheet" href="assets/css/header.css">
  <% } %>

</head>

<body onload="typeWriter()">

  <!-- Header -->
  <%- include('partial/header.ejs', { data: data }); %>

  <!-- Typing Text -->
  <div class="text-center my-4">
    <h1 id="typeit"></h1>
  </div>

  <!-- Single-Service Start -->
  <div class="single-service-area pt_60 pb_90">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="service-info">
            <div class="single-ser-carousel owl-carousel">
              <div class="event-photo-item">
                <img src="assets/images/newborn.JPEG" alt="Service Photo">
              </div>
            </div>
            <h2>Modern Laboratory</h2>
            <p>
              <li>
                Book lab tests online with home sample collection.
              </li>
              <li>
              Access advanced diagnostic facilities like MRI, CT scan, and genetic testing.
              </li>
              <li>
              Get fast, accurate digital reports with doctor consultations.
              </li>
              <li>
              Track lab test progress and receive real-time status updates.
              </li>
            </p>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="service-sidebar">
            <div class="service-sidebar-item headstyle">
              <h4>OUR SERVICES</h4>
              <ul>
                <li><i class="fas fa-angle-right"></i> <a href="#">Newborn Care</a></li>
                <li><i class="fas fa-angle-right"></i> <a href="#">Mother Care</a></li>
                <li><i class="fas fa-angle-right"></i> <a href="#">Critical Treatment</a></li>
                <li><i class="fas fa-angle-right"></i> <a href="#">Modern Laboratory</a></li>
                <li><i class="fas fa-angle-right"></i> <a href="#">All Major Tests</a></li>
                <li><i class="fas fa-angle-right"></i> <a href="#">Dental Care</a></li>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <!-- Single-Service End -->

  <!-- Footer -->
  <%- include('partial/footer.ejs'); %>

  <!-- Typing Animation Script -->
  <script>
    var i = 0;
    var txt = 'WELCOME TO MEDICOBUDDY';
    var speed = 60;

    function typeWriter() {
      if (i < txt.length) {
        document.getElementById("typeit").innerHTML += txt.charAt(i);
        i++;
        setTimeout(typeWriter, speed);
      }
    }
  </script>

  <!-- JavaScript Libraries -->
  <script defer src="assets/lib/js/jquery-3.4.1.min.js"></script>
  <script defer src="assets/lib/js/popper.min.js"></script>
  <script defer src="assets/lib/js/bootstrap.bundle.min.js"></script